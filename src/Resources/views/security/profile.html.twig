{% extends '@User/security/base.html.twig' %}

{% block title %}{{ title|trans }}: {{ kmj_user.username }} {% endblock %}

{% block titlePage %}{{title|trans}}{% endblock %}

{% block body %}
    
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>{{ 'username'|trans }}</th>
                <td>{{ kmj_user.username }}</td>
            </tr>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ kmj_user.name }}</td>
            </tr>
            <tr>
                <th>{{ 'roles'|trans }}</th>
                <td>
                    <ul>
                    {% for role in kmj_user.roles %}
                        <li>{{ role|trans }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    
    <a href="{{ path(back_path) }}" class="btn btn-block btn-primary">{{ 'back_to_home'|trans }}</a>
{% endblock %}
